{
  "manifest_version": 3,
  "name": "Multiple URL Opener",
  "description": "Store lists of URLs and open them all with one click.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open URL List",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "options_page": "options.html",
  "permissions": ["storage", "tabs"]
} 